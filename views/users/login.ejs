<% layout("./layouts/boilerplate.ejs") %>

<div class="row">
    <h2 class="col-6 offset-3">Welcome back to WanderLust</h2>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input id="username" name="username" placeholder="Add Username" type="text" class="form-control" required/>
              </div>
              <div class="mb-3 col-6">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" placeholder="Add Strong Password" type="password" class="form-control" required/>
              </div>

              <button class="btn btn-danger mb-3">Login</button>
        </form>
    </div>
</div>